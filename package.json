{
  "name": "verifiable-data-registry-server",
  "version": "0.0.9",
  "description": "A server-based implementation of verifiable data registry.",
  "main": "src/main.ts",
  "scripts": {
    "build": "yarn tsc",
    "start": "node dist/main.js",
    "watch": "yarn tsc --watch",
    "dev": "concurrently -k \"yarn tsc --watch\" \"nodemon -q dist/main.js\"",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.ts'"
  },
  "keywords": [
    "self-sovereign identity",
    "verifiable data registry",
    "decentralized identifiers",
    "verifiable credentials",
    "JSON web"
  ],
  "author": "Yepeng Ding <yepengding@g.ecc.u-tokyo.ac.jp>",
  "license": "Apache License 2.0",
  "dependencies": {
    "apollo-server-core": "^3.10.1",
    "apollo-server-express": "^3.10.1",
    "body-parser": "^1.20.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "class-validator-jsonschema": "^3.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "eslint-config-prettier": "^8.5.0",
    "express": "^4.18.1",
    "graphql": "^15.7.2",
    "jose": "^4.9.0",
    "json-schema": "^0.4.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.7",
    "winston": "^3.8.1",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/chai": "^4.3.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/json-schema": "^7.0.11",
    "@types/mocha": "^10.0.0",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.7.6",
    "@types/reflect-metadata": "^0.1.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "chai": "^4.3.6",
    "concurrently": "^7.3.0",
    "eslint": "^8.22.0",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "supertest": "^6.3.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
